---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">We are here to help!</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">

          Hey there! We'd love to hear from you! Fill out this awesome contact form with your name, email, phone number, and a super cool message. We'll get back to you in a jiffy!        </p>

      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
